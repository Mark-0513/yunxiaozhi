@import "/pages/assets/colorui/icon.wxss";

.container {
  background-color: var(--background);
  border-radius: 12rpx;
  overflow: hidden;
  margin: 20rpx;
  position: relative;
}

.content{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: #1380ff;
}

.icon-close{
  padding: 8rpx 12rpx;
  position: absolute;
  right: 24rpx;
  top: 2rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #ffa807;
}

.notice{
  position: relative;
  box-sizing: border-box;
  background: #fff;
  border-radius: 12rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx
}