.focus{
  text-align: left;
  padding: 20rpx 30rpx;
  background: #fff;
  border-radius: 12rpx;
}
.logo,.content,.action{
  display: inline-block;
  float: left;
}
.clearfloat{
  clear: both;
}
.logo-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%
}
.content{
  margin-left: 20rpx;
  height: 100rpx;
  line-height: 40rpx;
  padding: 10rpx 0;
  letter-spacing: 4rpx;
}
.content .name {
  font-size: 32rpx;
  color: #1380ff;
  font-weight: bold;
}
.action{
  margin-left: 20rpx;
  height: 100rpx;
  float: right;
}
.focus-btn{
  height: 60rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
  background: #51b8bf;
  color: #fff;
  font-size: 28rpx;
  margin: 20rpx 0;
}