<import src="we-cropper/we-cropper.wxml"/>

<view class="cropper-wrapper" style="padding-top:{{customBar}}px">
    <template is="we-cropper" data="{{...cropperOpt}}"/>
</view>
<view class="cropper-buttons">
  <view class="upload" bindtap="cancel">取消</view>
  <view class="upload" bindtap="uploadTap">重新选择</view>
  <view class="getCropperImage" bindtap="getCropperImage">确定</view>
</view>