.cropper-wrapper{
  position: relative; 
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 90%;
  background-color: rgba(0, 0, 0, 1); 
}

.cropper-buttons{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
  position: absolute;
  bottom: 0;
  left: 0;  
  width: 100%;
  line-height: 50px;
  height: 10%;
  z-index: 1;
}

.cropper-buttons .upload, .cropper-buttons .getCropperImage{
  width: 50%;
  text-align: center;
}

.cropper{
  width: 100%;
}

.cropper-buttons{
  background-color: rgba(0, 0, 0, 0.95);
  color: #fbbd08;
}