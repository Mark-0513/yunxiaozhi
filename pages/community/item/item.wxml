  <view class='message'>
    <view class='head'>
      <image class='head_img' src="{{headImg_pre}}{{message.img}}"></image>
      <text class='info'>{{message.nickname}}</text>
      <text class='info department'>{{message.department}}<text class='time'>{{message.time}}</text></text>
    </view>

    <view class='content'>
      <text class='text_data'>{{message.content}}</text>
      <view class='pictures'>
        <form bindsubmit="collectFormid" report-submit wx:for="{{message.pictures}}" wx:key="key" wx:for-index="m_pic" wx:for-item="pic">
          <button class='form-btn picture' style="width:{{message.pictures_length>1?200:imageRatio.width*2}}rpx;height:{{message.pictures_length>1?200:imageRatio.height*2}}rpx" form-type='submit' data-idnum='{{id}}_{{m_pic}}' data-method="previewPicture">
            <image lazy-load="true" class='picture' bindload="imageLoad" data-index="{{id}}_{{message.pictures_length}}" style="width:{{message.pictures_length>1?200:imageRatio.width*2}}rpx;height:{{message.pictures_length>1?200:imageRatio.height*2}}rpx" mode="{{message.pictures_length>1?'aspectFill':'aspectFit'}}" src="{{pic_pre+pic}}">
            </image>
          </button>
        </form>
      </view>
    </view>
    <view class='bottom'>
      <form bindsubmit="collectFormid" report-submit>
        <button class='form-btn like padding' form-type='submit' data-method="inputComment">
          <image src='../../assets/imgs/other/comment.png'></image>
          <text class='gray'>评论</text>
        </button>
      </form>
      <form bindsubmit="collectFormid" report-submit>
        <input hidden='true' name='id' value='{{id}}'></input>
        <input hidden='true' name='isLike' value='{{message.isLike}}'></input>
        <button class='form-btn like' form-type='submit' data-method="setLike">
          <image src="../../assets/imgs/other/like{{message.isLike==0?'':'_press'}}.png"></image> 
          <text class='gray'>{{message.like_num==0?'点赞':message.like_num}}</text>
        </button>
      </form>
      <view class='more'>
        <form bindsubmit="collectFormid" report-submit>
          <button class="form-btn" form-type="submit" data-method="more">   
            <image src='../../assets/imgs/other/more.png'></image>
          </button>
        </form>
      </view>
    </view>
  </view>

  <view class='comments'>
    <view class='top gray'>评论 {{message.comment_num}}</view>
    <view class='no-comment' wx:if="{{message.comment_num==0}}">还没有评论，快来抢个沙发！</view>
    <view class='first' wx:for="{{firstComment}}" wx:key="key" wx:for-item="first">
       <view class='head'>
        <image class='head_img' src="{{headImg_pre}}{{first.user_img}}"></image>
        <text class='info' bindtap='secondComment' data-set='{{first.user_name}},{{first.cid}},{{first.user_id}}'>{{first.user_name}}</text>
        <text class='info department' bindtap='secondComment' data-set='{{first.user_name}},{{first.cid}},{{first.user_id}}'>{{first.department}}<text class='time'>{{first.time}}</text></text>
      </view> 
      <view class='content'>
        <text class='text_data text_comment' bindtap='secondComment' data-set='{{first.user_name}},{{first.cid}},{{first.user_id}}'>{{first.content}}</text>
        <view class='seconds' wx:if="{{first.secondComments.length>0}}">
          <view class='text_data comment_data' bindtap='secondComment' data-set='{{second[0].user}},{{first.cid}},{{second[0].user_id}},{{second[0].cid}}' wx:for="{{first.secondComments}}" wx:key="key" wx:for-item="second">
            <text class='blue'>{{second[0].user}}</text>
            <text> 回复 </text>
            <text class='blue'>{{second[0].toUser}}</text>
            <text> : </text>
            <text>{{second[0].content}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
  <form bindsubmit="collectFormid" report-submit>
    <view class='input'>
      <input maxlength='140' placeholder-style='font-size:26rpx' placeholder="{{commentToWho==''?'':'回复 '+commentToWho}}" focus="{{isFocus}}" name='content' value='{{inputValue}}' confirm-type='提交' class='input_comment'></input>
      <button class='submit' form-type='submit' data-method="newComment">提交</button>
    </view>
  </form> 