page{
  background: #fff;
}
.bg image{
  padding-top: 50rpx;
  width: 100%;
  z-index: -1;
}
.container{
  position: relative;
  top: -30rpx;
}
.userinfo{
  padding: 0 3%;
  width: 100%;
  height: 130rpx;
  position: relative;
}
.avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 100%;
  position: absolute;
  top: 0;
  right: 3%;
}
.nickname {
  font-size: 40rpx;
  letter-spacing: 4rpx;
}
.stuId{
  padding-top: 20rpx;
}
.info{
  line-height: 30px;
  display: block;  
  text-align: center;   
  font-size: 16px; 
}
.blue{
  color: blue
}
.title{
  font-size: 18px;
  font-weight:bold 
}
.my{
  background: #fff;
  line-height: 50rpx;
  margin: 30rpx 0 0;
  padding: 12rpx 15px;
}
.my view:first{
  margin-bottom: 20rpx;
}
.infoContent{
  background: #fff;
  border-radius: 30rpx;
  padding: 10rpx 3%;
}
.right{
  height: 20px;
  width: 20px;
  float: right;
  margin-top: 6px;
}
.kefu{
  position: absolute;
  top:0;
  left: 0;
  opacity: 0;
  width: 100%;
  height: 100%;
}
button::after{
  border-radius: 0;
  border: 0;
}
.zanshang{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}
.navigator-hover{
  background: #fff;
}
.cu-list.menu>.cu-item{
  padding-left: 0;
}
.banner{
  padding: 14rpx 3%;
  position: relative;
}
.banner button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 188rpx;
  background: transparent;
}
.banner image{
  width: 100%;
  height: 188rpx;
  border-radius: 12rpx;
  z-index: -1;
}
.cu-list.menu>.cu-item.arrow:before {
  right: 0rpx!important;
}
.cu-list.menu.sm-border>.cu-item:after {
  left: 12rpx;
  width: calc(200% - 40rpx);
}
.counts{
  padding: 10rpx 3%;
}
.counts .item{
  display: inline-block;
  float: left;
  width: 64rpx;
  margin-right: 80rpx;
}