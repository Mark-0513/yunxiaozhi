.list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.list .li{
  width: calc(100% / 7);
  position: relative;
}
.li .item{
  width: 100%;
  overflow: hidden;
  text-align: center;
  margin: 0 auto;
}
.data .li .item{
  height: 100rpx;
  line-height: 50rpx;
}
.data .li .item::after{
  position: absolute;
  top: 0;
  left: 0;
  content: " ";
  border-right: 1px solid #f1f;
  border-bottom: 1px solid #f1f;
  width: 100%;
  height: 100%;
}
.data .li .item:nth-child(n+28)::after{
  width: 0;
  height: 0;
}

.active .item{
  background: var(--theme);
  color: #fff;
}
.option{
  color: #fff;
  background: var(--theme);
  border-radius: 50%;
  padding: 14rpx;
  text-align: right;
}
.option:nth-child(1){
  margin-right: 24rpx;
}