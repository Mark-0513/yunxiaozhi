<swiper class="screen-swiper square-dot" indicator-dots="true" circular="true" autoplay="true" interval="4000" duration="500">
  <swiper-item wx:for="{{banner}}" wx:key="key">
    <image src="{{item.img_src}}" data-index="{{item.index}}" mode="aspectFill"></image>
  </swiper-item>
</swiper>
<view class="add_tips shadow" wx:if="{{add_tips}}">
  点击<text class="icon-more"></text>添加到"我的小程序"，随时随地看课表
  <text class="icon-close" bindtap="close_tips"></text>
</view>
<view class="index">
  <view class="cu-list grid col-{{gridCol}} no-border">
    <view class="cu-item" wx:for="{{tools}}" wx:key="key" data-url="{{item.url}}" data-needLogin="{{item.needLogin}}" bindtap='openTool'>
      <view class="icon-{{item.icon}} text-{{item.color}}">
        <view class="cu-tag badge" wx:if="{{item.badge!=0}}">
          <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
        </view>
      </view>
      <text>{{item.name}}</text>
    </view>
  </view>

  <view class='page-content'>
    <view class='course'>
      <view class="cu-bar bg-white solid-bottom arrow" bindtap='goCourse'>
        <view class="action">
          今日课表
          <text class="text-sm">{{tmpClass == '' ? '' : '('+ tmpClass.name +')'}}</text>
        </view>
        <view class="action">
          {{now_week}} 周{{WEEKDAY}}
        </view>
      </view>
      <view class="cu-list menu" wx:if="{{course.length>0}}">
        <view class="cu-item" wx:for="{{course}}" wx:key="key" bindtap='displayCourseInfo' data-num='{{item.indexNum}}'>
          <view class="content text-cut">
            <text class="text-grey">{{item.jie}}-{{item.jie_end}} </text>
            <text class="text-black">{{item.name}}</text>
          </view>
          <view class="action">
            <text class="text-black text-sm">{{item.address}}</text>
          </view>
        </view>
      </view>
      <view wx:if="{{tmpClass == '' && user_id==''}}" class='course_list unlogin'>
          <text bindtap='goLogin'>登录后可查看，点击登录</text>
      </view> 
      <view wx:if="{{user_id!='' && (course.length<=0 || course == null)}}" class='course_list unlogin'>
        <view wx:if="{{soul}}" class="text-left">
          <view bindtap="goSoul" class="soul">{{soul.title}}</view>
          <view class="like margin-top-sm text-right">
            <view bindtap="likeSoul" data-id="{{soul.id}}">
              <text class="icon-{{likeSoul?'likefill':'like'}} text-pink"></text>
              <text class="text-pink"> {{soul.like_count}}</text>
            </view>
          </view>
        </view>
        <view wx:else>
          今天没课，去充实一下自己呗
        </view>
      </view>
    </view>

    <view class='course' wx:if="{{my_exam.length>0}}">
      <view class="cu-bar bg-white solid-bottom arrow" bindtap='goExam'>
        <view class="action">考试安排</view>
        <view class="action">
          <text class="text-theme icon-right"></text>
        </view>
      </view>
      <view class="cu-list menu">
        <view class="cu-item"  wx:if="{{item.days>=0}}" bindtap='goExam' wx:index="{{index}}" wx:for="{{my_exam}}" wx:key="key">
          <view class="content">
            <text class="text-black">{{item.exam_name}}</text>
          </view>
          <view class="action">
            <text>剩余<text class='days'>{{item.days}}</text>天</text>
          </view>
        </view>
    </view>
  </view>
  </view>
</view>